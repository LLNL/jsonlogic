{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Benchmark",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-debug/bench/${input:benchmarkExecutable}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "CMake: build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Add safe path for auto-loading debug build",
                    "text": "add-auto-load-safe-path ${workspaceFolder}/build-debug",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Profile Benchmark (RelWithDebInfo)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-relwithdebinfo/bench/${input:benchmarkExecutable}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "CMake: build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Add safe path for auto-loading RelWithDebInfo build",
                    "text": "add-auto-load-safe-path ${workspaceFolder}/build-relwithdebinfo",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-debug/tests/${input:testExecutable}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "CMake: build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Add safe path for auto-loading debug build",
                    "text": "add-auto-load-safe-path ${workspaceFolder}/build-debug",
                    "ignoreFailures": true
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "benchmarkExecutable",
            "description": "Select benchmark executable",
            "type": "promptString"

            // "type": "pickString",
            // "options": [
            //     "jl-bench-eq",
            //     "jl-bench-complex1",
            //     "jl-bench-membership"
            // ]
        },
        {
            "id": "testExecutable", 
            "description": "Select test executable",
            "type": "pickString",
            "options": [
                "testeval",
                "unit_tests"
            ]
        }
    ]
}