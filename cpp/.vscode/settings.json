{
    // Project-specific C++ configuration
    "C_Cpp.intelliSenseEngine": "disabled",
    
    // CMake configuration for this project
    "cmake.generator": "Unix Makefiles",
    "cmake.buildDirectory": "${workspaceFolder}/build/release",
    
    // Clangd configuration specific to this project
    "clangd.arguments": [
        "-j=4",
        "--background-index",
        "--compile-commands-dir=${workspaceFolder}/build/release",  // Changed from /build
        "--clang-tidy",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--pch-storage=memory",
        "--all-scopes-completion",
        "--suggest-missing-includes",
        "--cross-file-rename",
        "--function-arg-placeholders"
    ],
    
    // Force C++20 standard for clangd
    "clangd.fallbackFlags": [
        "-std=c++20"
    ],
    
    // Project-specific search exclusions
    "search.exclude": {
        "**/build/**": true
    },
    
    // Project-specific file watcher exclusions
    "files.watcherExclude": {
        "**/build/**": true
    },
    
    // Project-specific spell checker words
    "cSpell.words": [
        "jsonlogic",
        "faker",
        "boost",
        "cmake",
        "clangd",
        "truthy"
    ]
}